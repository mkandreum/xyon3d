# Environment Variables for Coolify Deployment

# Database Configuration
DB_USER=polyform_user
DB_PASSWORD=CHANGE_THIS_SECURE_PASSWORD_IN_PRODUCTION
DB_NAME=polyform_db

# Application Configuration
PORT=3000
NODE_ENV=production

# Admin Credentials
ADMIN_PASSWORD=CHANGE_THIS_ADMIN_PASSWORD

# Security
SESSION_SECRET=CHANGE_THIS_RANDOM_SECRET_KEY_MINIMUM_32_CHARS

# Gemini AI API Key (for product description generation)
GEMINI_API_KEY=your_gemini_api_key_here

# SMTP Configuration (configurable from admin panel, these are defaults)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM=noreply@polyform3d.com
